{% extends 'base_admin.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<h1>Contact index</h1>
	<a class="btn btn-primary" href="{{ path('admin_contact_new') }}" role="button">Create new</a>

	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Type</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>
						<td>{{ contact.id }}</td>
						<td>{{ contact.type }}</td>
						<td class="action">
							<a href="{{ path('admin_contact_show', {'id': contact.id}) }}">
								<i class="bi bi-eye-fill icon-show"></i>
							</a>
							<a href="{{ path('admin_contact_edit', {'id': contact.id}) }}">
								<i class="bi bi-pencil-square icon-edit"></i>
							</a>
							{{ include('admin/contact/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
