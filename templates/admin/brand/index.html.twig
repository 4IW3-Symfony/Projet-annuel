{% extends 'base_admin.html.twig' %}

{% block title %}Brand index
{% endblock %}

{% block body %}
	<h1>Brand index</h1>
	<a class="btn btn-primary" href="{{ path('admin_brand_new') }}">Create new</a>

	<div class="table-responsive">

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Logo</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>


				{% for brand in brands %}
					<tr>
						<td>{{ brand.id }}</td>
						<td>{{ brand.name }}</td>
						<td>{{ brand.logo }}</td>
						<td>{{ brand.createdAt ? brand.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ brand.updatedAt ? brand.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td class="action">
							<a href="{{ path('admin_brand_show', {'id': brand.id}) }}">
								<i class="bi bi-eye-fill icon-show"></i>
							</a>
							<a href="{{ path('admin_brand_edit', {'id': brand.id}) }}">
								<i class="bi bi-pencil-square icon-edit"></i>
							</a>
							{{ include('admin/brand/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>
{% endblock %}
