{% extends 'base_admin.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>
	<a class="btn btn-primary" href="{{ path('admin_user_new') }}" role="button">Create new</a>

	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>IsVerified</th>
					<th>Firstname</th>
					<th>Lastname</th>
					<th>DateOfBirth</th>
					<th>Driving_licence</th>
					<th>Id_card</th>
					<th>Address</th>
					<th>City</th>
					<th>Zip</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
						<td>{{ user.drivingLicence }}</td>
						<td>{{ user.idCard }}</td>
						<td>{{ user.address }}</td>
						<td>{{ user.city }}</td>
						<td>{{ user.zip }}</td>
						<td class="action">
							<a href="{{ path('admin_user_show', {'id': user.id}) }}">
								<i class="bi bi-eye-fill icon-show"></i>
							</a>
							<a href="{{ path('admin_user_edit', {'id': user.id}) }}">
								<i class="bi bi-pencil-square icon-edit"></i>
							</a>
							{{ include('admin/user/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="14">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
