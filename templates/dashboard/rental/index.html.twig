{% extends 'base_dashboard.html.twig' %}

{% block title %}Rental index
{% endblock %}

{% block body %}
	<h1>Mes Révervations</h1>
	<div class="table-responsive">

		<table class="table">
			<thead>
				<tr>
					<th>Réference</th>
					<th>Date</th>
					<th>Date_start</th>
					<th>Date_end</th>
					<th>Status</th>
					<th>Km_start</th>
					<th>Km_end</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for rental in rentals %}
					<tr>
						<td>{{ rental.id }}</td>
						<td>{{ rental.createdAt ? rental.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ rental.dateStart ? rental.dateStart|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ rental.dateEnd ? rental.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							{% if rental.status == 1%}
								En attente Validation
							{% endif %}
							{% if rental.status == 2%}
								Validé
							{% endif %}
							{% if rental.status == 3%}
								Véhicule remis au client
							{% endif %}
							{% if rental.status == 4%}
								Vehicule Réstitué
							{% endif %}
							{% if rental.status == 5%}
								Location Clos
							{% endif %}
							{% if rental.status == 6%}
								SAV
							{% endif %}
						</td>
						<td>{{ rental.kmStart }}</td>
						<td>{{ rental.kmEnd }}</td>
						<td class="action">
							<a href="{{ path('dashboard_rental_show', {'id': rental.id}) }}">
								<i class="bi bi-eye-fill icon-show"></i>
							</a>
							{{ include('dashboard/rental/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
