{% extends 'base_dashboard.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact {{ personne.lastname }} {{ personne.firstname }}</h1>

    {% for message in contact.ContactMessages %}
        {% if message.IdUser.Id == monid %}
            <h5 style="color:red;border:solid;">{{message.message }} {{ message.date|date('m-d H:i') }}</h5>
        {% else %}
            <h5 style="color:green;border:solid;">{{message.message }} {{ message.date|date('m-d H:i') }}</h5>
        {% endif %}
    {% endfor %}


    {{ include('contact_message/_form.html.twig') }}

    <a href="{{ path('app_contact_index') }}">back to list</a>


{% endblock %}
