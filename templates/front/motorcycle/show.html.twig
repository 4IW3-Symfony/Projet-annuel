{% extends 'base.html.twig' %}

{% block title %}easyloc - {{ motorcycle.name }}{% endblock %}

{% block body %}
	<section>
		<div class="container">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Accueil</a></li>
					<li class="breadcrumb-item"><a href="/resultat-search">Recherche</a></li>
					<li class="breadcrumb-item active" aria-current="page">{{ motorcycle.name }}</li>
				</ol>
			</nav>
		</div>
	</section>
	<main>
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-8">
					<div class="d-flex justify-content-center align-items-center overflow-hidden" style="height: 300px;">
						{%  if motorcycle.motorcycleImages|length > 0 %}
							{% for image in motorcycle.motorcycleImages %}
								<img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.imageName }}" class="img-fluid"/>
							{% endfor %}
						{% else %}
							<img src="{{asset(constant('DEFAULT_IMAGE', motorcycle))}}" class="card-img-top img-fluid">
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</main>
	<h1>Motorcycle</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Images</th>
				<td>
					{%  if motorcycle.motorcycleImages|length > 0 %}
						{% for image in motorcycle.motorcycleImages %}
							<img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.imageName }}" style="max-width:100px"/>
						{% endfor %}
					{% else %}
						<img src="{{asset(constant('DEFAULT_IMAGE', motorcycle))}}" class="card-img-top" style="max-width:100px">
					{% endif %}
				</td>
			</tr>
			<tr></tr>
			<tr>
				<th>Id</th>
				<td>{{ motorcycle.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ motorcycle.name }}</td>
			</tr>
			<tr>
				<th>Power</th>
				<td>{{ motorcycle.power }}</td>
			</tr>
			<tr>
				<th>Numberplate</th>
				<td>{{ motorcycle.numberplate }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ motorcycle.description }}</td>
			</tr>
			<tr>
				<th>Km</th>
				<td>{{ motorcycle.km }}</td>
			</tr>
			<tr>
				<th>Year</th>
				<td>{{ motorcycle.year }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ motorcycle.status }}</td>
			</tr>
		</tbody>
	</table>

    <a href="{{ path('demande_location',{'id': motorcycle.id}) }}" class="btn btn-primary">Demande une location</a>

{% endblock %}
