{% extends 'base.html.twig' %}

{% block title %}Résultat
{% endblock %}

{% block body %}
<main class="pt-5">
	<div class="container">
		<div class="motorcycle mb-5">
			<div class="row">
				<div class="col-12 col-md-4 col-lg-3">
					{{ form_start(form) }}
					{{ form_widget(form) }}
					<button class="btn btn-primary">{{ button_label|default('Rechercher') }}</button>
					{{ form_end(form) }}
				</div>
				<div class="col-12 col-md-8 col-lg-9">
					{% if motorcycles|length < 1 %}
						<h2 class="text-center mb-3">Aucun résultat avec vos critères.</h2>
					{% endif%}
					{%for motorcycle in motorcycles %}
						<article class="card text-center" style="width: 18rem;">
							{% if motorcycle.motorcycleImages %}
								<img src="https://via.placeholder.com/640x480/000000/FFFFFF/?text=--NO-IMAGE---" class="card-img-top">
							{% else %}
								<img src="{{motorcycle.motorcycleImages.first.image}}" class="card-img-top">
							{% endif %}
							<div class="card-body">
								<h5 class="card-title">{{motorcycle.name}}</h5>
								<p class="text-muted">{{motorcycle.model.brand.name}}
									-{{motorcycle.model.name}}
								</p>
								<a href="{{ path('motorcycle_show',{'id': motorcycle.id, 'date_end' : date_end , 'date_start':date_start}) }}" class="btn btn-primary">
									Show</a>
							</div>
						</article>
					{%endfor %}
				</div>
			</div>
		</div>


		<h1 class="text-center mb-3">Autre deux roues à proximité</h1>
		<div class="row">
			{%for autresmoto in autresmotos %}
				<div class="col-xl-3 col-lg-4 mb-5">
					<div class="card text-center" style="width: 18rem;">
						{% if autresmoto.motorcycleImages %}
							<img src="https://via.placeholder.com/640x480/000000/FFFFFF/?text=--NO-IMAGE---" class="card-img-top">
						{% else %}
							<img src="{{motorcycle.motorcycleImages.first.image}}" class="card-img-top">
						{% endif %}
						<div class="card-body">
							<h5 class="card-title">{{autresmoto.name}}</h5>
							<p class="text-muted">{{autresmoto.model.brand.name}}
								-{{autresmoto.model.name}}
							</p>
							<a href="{{ path('motorcycle_show',{'id': autresmoto.id, 'date_end' : date_end , 'date_start':date_start}) }}" class="btn btn-primary">
								Show</a>
						</div>
					</div>
				</div>
			{%endfor %}
		</div>
	</div>
</main>
{% endblock %}
