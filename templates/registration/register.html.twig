{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

    <main class="my-5">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center extend-page">
                <div class="border p-4" style="width: 350px">
                    <h1 class="h3 mb-3 font-weight-normal">S'inscrire</h1>
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {{ form_start(registrationForm) }}
                        <div class="form-group mb-2">
                            <label>Prénom :</label>
                            {{ form_widget(registrationForm.firstname) }}
                        </div>
                        <div class="form-group mb-2">
                            <label>Nom :</label>
                            {{ form_widget(registrationForm.lastname) }}
                        </div>
                    <div class="form-group mb-2">
                        <label>Email :</label>
                        {{ form_widget(registrationForm.email) }}
                    </div>
                    <div class="form-group mb-2 remove-symfony-label">
                        {{ form_widget(registrationForm.plainPassword) }}
                    </div>
                    <div class="form-group mb-2">
                        <label>Date de naissance :</label>
                        {{ form_widget(registrationForm.dateOfBirth) }}
                    </div>
                    <div class="form-group mb-2">
                        <label>Adresse :</label>
                        {{ form_widget(registrationForm.address) }}
                    </div>
                    <div class="d-flex align-items-center justify-content-between gap-3">
                        <div class="form-group mb-2">
                            <label>Ville :</label>
                            {{ form_widget(registrationForm.city) }}
                        </div>
                        <div class="form-group mb-2">
                            <label>Code postal :</label>
                            {{ form_widget(registrationForm.zip) }}
                        </div>
                    </div>
                    <div class="form-group mb-2">
                        {{ form_widget(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="btn btn-primary w-100">{{ button_label|default('S\'insrire') }}</button>
                    {{ form_end(registrationForm) }}
                    <div class="my-3">
                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a><br>
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </main>



{% endblock %}
